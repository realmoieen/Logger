{
   "Configuration": {
      "Appenders": {
         "Console": {
            "PatternLayout": {
               "pattern": "%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n"
            },
            "name": "Console",
            "target": "SYSTEM_OUT"
         },
         "File": {
            "PatternLayout": {
               "pattern": "%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n"
            },
            "name": "File",
            "fileName": "d:/log/app.log"
         }
      },
      "Loggers": {
         "com.amdevelopers": {
            "AppenderRef": [
               {
                  "ref": "Console"
               },
               {
                  "ref": "File"
               }
            ],
            "level": "debug"
         }
      }
   }
}